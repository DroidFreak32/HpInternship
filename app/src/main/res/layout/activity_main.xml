<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/pitch_black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/input"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="136dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/toprow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/toprow_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input">

        <Button
            android:id="@+id/num_button_7"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="@color/pitch_black"
            android:layout_weight="1"
            android:text="7"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/num_button_8"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="@color/pitch_black"
            android:layout_weight="1"
            android:text="8"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/num_button_9"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="@color/pitch_black"
            android:layout_weight="1"
            android:text="9"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_clear"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="@color/pitch_black"
            android:layout_weight="1"
            android:text="clear"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/toprow_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/toprow_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toprow">

        <Button
            android:id="@+id/num_button_4"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="@color/pitch_black"
            android:layout_weight="1"
            android:text="4"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/num_button_5"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="@color/pitch_black"
            android:layout_weight="1"
            android:text="5"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/num_button_6"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="@color/pitch_black"
            android:layout_weight="1"
            android:text="6"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_minus"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="@color/pitch_black"
            android:layout_weight="1"
            android:text="-"
            android:textColor="@color/white" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/toprow_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/toprow_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toprow_1"
        tools:layout_editor_absoluteY="455dp">

        <Button
            android:id="@+id/num_button_1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="@color/pitch_black"
            android:layout_weight="1"
            android:text="1"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/num_button_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="@color/pitch_black"
            android:layout_weight="1"
            android:text="2"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/num_button_3"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="@color/pitch_black"
            android:layout_weight="1"
            android:text="3"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_plus"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="@color/pitch_black"
            android:layout_weight="1"
            android:text="+"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/toprow_3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toprow_2">

        <Button
            android:id="@+id/num_button_0"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="@color/pitch_black"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_divide"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="@color/pitch_black"
            android:layout_weight="1"
            android:text="/"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_multiply"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="@color/pitch_black"
            android:layout_weight="1"
            android:text="*"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_equals"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="@color/pitch_black"
            android:layout_weight="1"
            android:text="="
            android:textColor="@color/white" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>